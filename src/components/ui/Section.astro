---
interface Props {
  class?: string;
  background?: "white" | "gray" | "gradient";
  id?: string;
  noContainer?: boolean;
}

const {
  class: className = "",
  background = "white",
  id,
  noContainer = false,
} = Astro.props;

const bgStyles = {
  white: "bg-white",
  gray: "bg-gray-50",
  gradient: "bg-linear-to-br from-primary-50 via-white to-secondary-50",
};

const classes = `${noContainer ? "" : "py-16 lg:py-24"} ${bgStyles[background]} ${className}`;
---

<section class={classes} id={id}>
  {
    noContainer ? (
      <slot />
    ) : (
      <div class="container mx-auto">
        <slot />
      </div>
    )
  }
</section>
