---
import { Image } from "astro:assets";
import AnimatedStats from "../react/AnimatedStats";
import logisticsNetworkImg from "@assets/banner/photo-1578575437130-527eed3abbec.jpg";
---

<section class="relative py-24 overflow-hidden">
  <!-- Background -->
  <div class="absolute inset-0">
    <Image
      src={logisticsNetworkImg}
      alt="Global logistics network"
      class="w-full h-full object-cover"
      width={2070}
      height={1380}
    />
    <div class="absolute inset-0 bg-slate-900/90"></div>
  </div>

  <!-- Content -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-16">
      <div
        class="inline-block px-4 py-2 mb-4 bg-white/10 backdrop-blur-sm text-white text-sm font-semibold rounded-full"
      >
        Metrik Peforma
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">
        Mendefinisikan Ulang <br />
        Per<span
          class="text-transparent bg-clip-text bg-linear-to-r from-blue-400 to-teal-400"
          >gudang</span
        >an Cerdas
      </h2>
      <p class="text-xl text-slate-300 max-w-3xl mx-auto leading-relaxed">
        Memadukan presisi robotika dengan kecerdasan sistem kontrol untuk
        menciptakan ekosistem gudang masa depan.
      </p>
    </div>

    <AnimatedStats client:load />

    <!-- Trusted By Section -->
    <div class="mt-20">
      <p
        class="text-center text-slate-400 text-sm font-semibold uppercase tracking-wider mb-8"
      >
        Dipercaya lebih dari 100+ Perusahaan
      </p>
      <div class="grid grid-cols-2 md:grid-cols-6 gap-8">
        {/* Client logos placeholder */}
        <div class="flex items-center justify-center group">
          <div
            class="w-36 h-20 bg-white/5 hover:bg-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center text-white/40 group-hover:text-white/60 font-semibold transition-all border border-white/10 hover:border-white/20"
          >
            <Image
              src="/logos/GT-logo.png"
              alt="PT. Gajah Tunggal"
              class="h-12 w-auto object-contain"
              width={120}
              height={120}
            />
          </div>
        </div>
        <div class="flex items-center justify-center group">
          <div
            class="w-36 h-20 bg-white/5 hover:bg-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center text-white/40 group-hover:text-white/60 font-semibold transition-all border border-white/10 hover:border-white/20"
          >
            <Image
              src="/logos/kao-logo.png"
              alt="KAO"
              class="h-8 w-auto object-contain"
              width={120}
              height={120}
            />
          </div>
        </div>
        <div class="flex items-center justify-center group">
          <div
            class="w-36 h-20 bg-white/5 hover:bg-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center text-white/40 group-hover:text-white/60 font-semibold transition-all border border-white/10 hover:border-white/20"
          >
            <Image
              src="/logos/denso-logo.svg"
              alt="Denso"
              class="h-6 w-auto object-contain"
              width={120}
              height={120}
            />
          </div>
        </div>
        <div class="flex items-center justify-center group">
          <div
            class="w-36 h-20 bg-white/5 hover:bg-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center text-white/40 group-hover:text-white/60 font-semibold transition-all border border-white/10 hover:border-white/20"
          >
            <Image
              src="/logos/ms-logo.png"
              alt="Multistrada"
              class="h-12 w-auto object-contain"
              width={120}
              height={120}
            />
          </div>
        </div>
        <div class="flex items-center justify-center group">
          <div
            class="w-36 h-20 bg-white/5 hover:bg-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center text-white/40 group-hover:text-white/60 font-semibold transition-all border border-white/10 hover:border-white/20"
          >
            <Image
              src="/logos/posindo-logo.svg"
              alt="Pos Indonesia"
              class="h-12 w-auto object-contain"
              width={120}
              height={120}
            />
          </div>
        </div>
        <div class="flex items-center justify-center group">
          <div
            class="w-36 h-20 bg-white/5 hover:bg-white/10 backdrop-blur-sm rounded-lg flex items-center justify-center text-white/40 group-hover:text-white/60 font-semibold transition-all border border-white/10 hover:border-white/20"
          >
            <Image
              src="/logos/anteraja-logo.png"
              alt="Anteraja"
              class="h-12 w-auto object-contain"
              width={120}
              height={120}
            />
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
