---
import { SOCIAL_LINKS, SITE } from "@config/site";
import {
  Linkedin,
  Youtube,
  Instagram,
  MapPinned,
  Smartphone,
  Phone,
  Mail,
} from "lucide-react";

import { Image } from "astro:assets";
---

<footer class="bg-slate-900 text-slate-300">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div
      class="grid grid-cols-1 gap-12 lg:grid-cols-3 justify-items-center text-center"
    >
      <div class="space-y-6 flex flex-col items-center">
        <a href="/" class="flex items-center justify-center group">
          <Image
            src="/logos/SG-5_inv.svg"
            alt="Logo Perusahaan"
            class="h-13 w-auto"
            width={1200}
            height={800}
            loading="lazy"
          />
        </a>
        <p class="text-sm text-slate-400 leading-relaxed max-w-xs">
          {SITE.description}
        </p>
        <div class="flex justify-center space-x-4">
          <a
            href={SOCIAL_LINKS.linkedin}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-blue-600 hover:text-white transition-all"
            aria-label="LinkedIn"
          >
            <Linkedin className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.instagram}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-blue-400 hover:text-white transition-all"
            aria-label="Instagram"
          >
            <Instagram className="w-5 h-5" />
          </a>
          <a
            href={SOCIAL_LINKS.youtube}
            class="w-10 h-10 flex items-center justify-center rounded-lg bg-slate-800 text-slate-400 hover:bg-blue-500 hover:text-white transition-all"
            aria-label="Youtube"
          >
            <Youtube className="w-5 h-5" />
          </a>
        </div>
      </div>

      <div class="flex flex-col items-center">
        <h3
          class="text-sm font-semibold uppercase tracking-wider text-white mb-6"
        >
          Hubungi Kami
        </h3>
        <ul class="space-y-4 flex flex-col items-center">
          <li class="flex flex-col items-center gap-2">
            <MapPinned className="w-5 h-5 text-slate-400" />
            <a
              href="https://goo.gl/maps/dvVoMns6gA6keBJi6"
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors max-w-xs"
            >
              Kawasan Industri Jababeka Phase 5, Jl. Science Timur I Blok B3F
              No. 10, Sertajaya, Cikarang Timur, Bekasi
            </a>
          </li>
          <li class="flex items-center gap-3">
            <Phone className="w-5 h-5 text-slate-400" />
            <a
              href="tel:622128518211"
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors"
            >
              (+62) 21-2851-8211
            </a>
          </li>
          <li class="flex items-center gap-3">
            <Smartphone className="w-5 h-5 text-slate-400" />
            <a
              href="https://wa.me/628111985190"
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors"
            >
              (+62) 811-1985-190
            </a>
          </li>
          <li class="flex items-center gap-3">
            <Mail className="w-5 h-5 text-slate-400" />
            <a
              href="mailto:sales@makitech.id"
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors"
            >
              sales@makitech.id
            </a>
          </li>
        </ul>
      </div>

      <div class="flex flex-col items-center">
        <h3
          class="text-sm font-semibold uppercase tracking-wider text-white mb-6"
        >
          Solusi
        </h3>
        <ul class="space-y-3 flex flex-col items-center">
          <li>
            <a
              href="/solutions#storage-optimization"
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors"
              >Storage Optimization</a
            >
          </li>
          <li>
            <a
              href="/solutions#vertical-storage"
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors"
              >Vertical Storage</a
            >
          </li>
          <li>
            <a
              href="/solutions#automated-sorting"
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors"
              >Automated Sorting</a
            >
          </li>
          <li>
            <a
              href="/solutions#intelligent-transport"
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors"
              >Intelligent Transport</a
            >
          </li>
          <li>
            <a
              href="/solutions#ergonomic-handling"
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors"
              >Ergonomic Handling</a
            >
          </li>
          <li>
            <a
              href="/solutions#transport-handling"
              class="text-sm text-slate-400 hover:text-blue-400 transition-colors"
              >Transport Handling</a
            >
          </li>
        </ul>
      </div>
    </div>
    <div class="mt-16 pt-8 border-t border-slate-800">
      <div
        class="flex flex-col md:flex-row items-center justify-between space-y-4 md:space-y-0"
      >
        <p class="text-sm text-slate-400">
          &copy; {new Date().getFullYear()}
          {SITE.author}. All rights reserved.
        </p>
      </div>
    </div>
  </div>
</footer>
